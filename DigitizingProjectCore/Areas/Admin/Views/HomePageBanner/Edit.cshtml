@model DigitizingProjectCore.Areas.Admin.Dto.CreateUpdateHomePageDto
@{
    Layout = null;
}
<form asp-controller="HomePageBanner" asp-action="Edit" method="POST" onsubmit="return jQueryAjaxPost(this);">
    <input type="hidden" asp-for="Id">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="titleAr">Title (Arabic)</label>
                <input type="text" class="form-control" id="titleAr" asp-for="TitleAr">
                <span asp-validation-for="TitleAr" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="titleEn">Title (English)</label>
                <input type="text" class="form-control" id="titleEn" asp-for="TitleEN">
                <span asp-validation-for="TitleEN" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="subTitleAr">Sub Title (Arabic)</label>
                <input type="text" class="form-control" id="subTitleAr" asp-for="SubTitleAr">
                <span asp-validation-for="SubTitleAr" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="subTitleEn">Sub Title (English)</label>
                <input type="text" class="form-control" id="subTitleEn" asp-for="SubTitleEn">
                <span asp-validation-for="SubTitleEn" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 form-group">
            <label for="summaryAr">Summary (Arabic)</label>
            <textarea type="text" class="form-control" id="summaryAr" cols="20" rows="3" asp-for="SummaryAr"></textarea>
            <span asp-validation-for="SummaryAr" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label for="summaryEn">Summary (English)</label>
            <textarea type="text" class="form-control" id="summaryEn" cols="20" rows="3" asp-for="SummaryEn"></textarea>
            <span asp-validation-for="SummaryEn" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="urlAr">URL (Arabic)</label>
                <input type="text" class="form-control" id="urlAr" asp-for="URLAr">
                <span asp-validation-for="URLAr" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="urlEn">URL (English)</label>
                <input type="text" class="form-control" id="urlEn" asp-for="URLEn">
                <span asp-validation-for="URLEn" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="videoURL">Video URL</label>
                <input type="text" class="form-control" id="videoURL" asp-for="VideoURL">
                <span asp-validation-for="VideoURL" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="sortId">Sort(#)</label>
                <input type="number" class="form-control" id="sortId" asp-for="SortId">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="backgroundImage">Background Image</label>
        <img src="~/Images/@Model.BackgroundImageName" alt="@(Model.TitleEN)" width="250" height="250">
        <input type="file" class="form-control" id="backgroundImage" asp-for="BackgroundImage">
    </div>
    <div class="form-group">
        <label for="showText">Show Text on Slider</label>
        <input type="checkbox" id="showText" checked asp-for="ShowText">
    </div>
    <div class="form-group">
        <label for="active">Active</label>
        <input type="checkbox" id="active" checked asp-for="IsActive">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-warning">Edit</button>
        <input type="reset" class="btn" value="Rest">
    </div>
</form>