@model List<SolutionViewModel>
<div class="table-responsive">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Solutions</h2>
                </div>
                <div class="col-sm-6 text-right">
                    <a class="btn btn-success" asp-controller="Solution" asp-action="Add">Add Solution</a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name (English)</th>
                    <th>Name (Arabic)</th>
                    <th>Category</th>
                    <th>Brand</th>
                    <th>Products</th>
                    <th>Active</th>
                    <th>Created Date</th>
                    <th width="15%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NameEn</td>
                        <td>@item.NameAr</td>
                        <td>@item.Category.NameEn</td>
                        <td>@item.Brand.NameEn</td>
                        <td>@item._SolutionProducts.Count()</td>
                        @if (item.IsActive)
                        {
                            <td><input type="checkbox" checked></td>
                        }
                        else
                        {
                            <td><input type="checkbox"></td>
                        }
                        <td>@item.CreatedDate</td>
                        <td>
                            <a href="#" class='btn PopUp btn-xs btn-success'><i class='glyphicon glyphicon-link'></i></a>
                            <a class='btn btn-xs btn-info PopUp' onclick="showInPopup('@Url.Action("Edit" , "Solution" ,new{id = item.Id} ,Context.Request.Scheme)' , 'Edit Solution');"><i class='glyphicon glyphicon-edit'></i></a>
                            <a class="btn btn-xs btn-danger PopUp" onclick="showInPopup('@Url.Action("Delete" , "Solution" ,new{id = item.Id} ,Context.Request.Scheme)' , 'Delete Solution');"><i class='glyphicon glyphicon-trash'></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
