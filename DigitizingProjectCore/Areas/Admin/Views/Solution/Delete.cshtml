@{
    Layout = null;
    var id = ViewBag.Id;
}
<form asp-action="Delete" asp-controller="Solution" asp-route-id="@id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
    <input type="hidden" value="@id" />
    <label>Are You Sure?</label><br />
    <input type="submit" value="Delete" class="btn btn-danger">
</form>