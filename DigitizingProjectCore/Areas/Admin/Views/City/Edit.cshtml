@model DigitizingProjectCore.Areas.Admin.ViewModel.CityViewModel
@{
    Layout = null;
}
<form asp-controller="City" asp-action="Edit" method="POST" onsubmit="return jQueryAjaxPost(this);">
    <input type="hidden" asp-for="Id">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="nameEn">Name (English)</label>
                <input type="text" class="form-control" id="nameEn" asp-for="NameEn">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="nameAr">Name (Arabic)</label>
                <input type="text" class="form-control" id="nameAr" asp-for="NameAr">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="active">Active</label>
        @if (Model.IsActive)
        {
            <input type="checkbox" id="active" checked asp-for="IsActive">
        }
        else
        {
            <input type="checkbox" id="active" asp-for="IsActive">
        }
    </div>
    <div class="row">
        <div class="col-md-2">
            <button type="submit" class="btn btn-warning btn-create">Edit</button>
        </div>
        <div class="col-md-2">
            <input type="reset" class="btn" value="Rest">
        </div>
    </div>
</form>
