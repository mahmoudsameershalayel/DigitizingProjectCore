@model List<DigitizingProjectCore.Areas.Admin.ViewModel.CityViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .table-responsive {
            overflow-x: hidden;
        }
    </style>
</head>
<body>
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Cities</h2>
                    </div>
                    <div class="col-sm-6 text-right">
                        <a class="btn btn-success" onclick="showInPopup('@Url.Action("Add" , "City" ,null ,Context.Request.Scheme)' , 'Add City');">Add City</a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name (English)</th>
                        <th>Name (Arabic)</th>
                        <th>Active</th>
                        <th>Created Date</th>
                        <th width="15%"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NameEn</td>
                            <td>@item.NameAr</td>
                            @if (item.IsActive)
                            {
                                <td><input type="checkbox" checked></td>
                            }
                            else
                            {
                                <td><input type="checkbox"></td>
                            }
                            <td>@item.CreatedDate</td>
                            <td>
                                <a href="#" class='btn PopUp btn-xs btn-success'><i class='glyphicon glyphicon-link'></i></a>
                                <a class='btn btn-xs btn-info PopUp' onclick="showInPopup('@Url.Action("Edit" , "City" ,new{id = item.Id} ,Context.Request.Scheme)' , 'Edit City');"><i class='glyphicon glyphicon-edit'></i></a>
                                <button class="btn-delete btn btn-xs btn-danger Confirm" data-id="@item.Id"><i class='glyphicon glyphicon-trash'></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</body>
</html>
@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.all.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.btn-delete').click(function () {
                var itemId = $(this).data('id');
                Swal.fire({
                    title: 'Are you sure?',
                    text: 'You won\'t be able to revert this!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("Delete", "City")',
                            type: 'DELETE',
                            data: { id: itemId },
                            success: function (result) {
                                Swal.fire(
                                    'Deleted!',
                                    'The item has been deleted.',
                                    'success'
                                ).then(() => {
                                    location.reload();
                                });
                            },
                            error: function (xhr, status, error) {
                                console.error(xhr.responseText);
                            }
                        });
                    }
                });
            });
        });
    </script>
}
