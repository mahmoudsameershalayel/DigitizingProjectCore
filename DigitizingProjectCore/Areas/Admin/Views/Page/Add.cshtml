@model DigitizingProjectCore.Areas.Admin.Dto.CreateUpdatePageDto
@section css{
    <style>
        body {
            overflow-x: hidden;
        }
        .ck-editor__editable {
            min-height: 200px;
            max-height: 400px;
        }
    </style>
}
<form asp-controller="Page" asp-action="Add" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6 form-group">
            <label for="titleEn">Title (English)</label>
            <input type="text" class="form-control" id="titleEn" asp-for="TitleEn">
            <span asp-validation-for="TitleEn" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label for="titleAr">Title (Arabic)</label>
            <input type="text" class="form-control" id="titleAr" asp-for="TitleAr">
            <span asp-validation-for="TitleAr" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label for="slug">Slug</label>
        <input type="text" id="slug" class="form-control" asp-for="Slug">
    </div>
    <div class="form-group">
        <label for="detailsAr">Details (Arabic)</label>
        <textarea type="text" class="form-control" id="detailsAr" asp-for="DetailsAr"></textarea>
        <span asp-validation-for="DetailsAr" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="detailsEn">Details (English)</label>
        <textarea type="text" class="form-control" id="detailsEn" asp-for="DetailsEn"></textarea>
        <span asp-validation-for="DetailsEn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="image">Image</label>
        <input type="file" class="form-control" id="image" asp-for="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="active">Active</label>
        <input type="checkbox" id="active" checked asp-for="IsActive">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-create">Create</button>
        <input type="reset" class="btn" value="Rest">
    </div>
</form>


@section scripts{
    <script src="~/ckeditor5-build-classic/ckeditor.js"></script>
    <script>
        ClassicEditor.create(document.querySelector('#detailsAr'), {
        }).then(editor => {
            window.editor = editor;
        }).catch(err => {
            console.error(err.stack);
        });
        ClassicEditor.create(document.querySelector('#detailsEn'), {
        }).then(editor => {
            window.editor = editor;
        }).catch(err => {
            console.error(err.stack);
        });
    </script>
}