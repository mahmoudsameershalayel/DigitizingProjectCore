@model List<DigitizingProjectCore.Areas.Admin.ViewModel.BrandViewModel>

<div class="table-responsive">
    <div class="table-wrapper">
        <div class="table-title">
            <h2>Brand</h2>
            <div class="row">
                <div class="col-md-4">
                    <form id="searchForm">
                        <div class="row">
                            <div class="col-md-8">
                                <input type="text" id="searchQuery" class="form-control" placeholder="Search Key...." />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div id="searchResults"></div>
                <div class="col-md-8 text-right">
                    <a class="btn btn-success" onclick="showInPopup('@Url.Action("Add" , "Brand" ,null ,Context.Request.Scheme)' , 'Add Brand');">Add Brand</a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name (English)</th>
                    <th>Name (Arabic)</th>
                    <th>Active</th>
                    <th>Partner</th>
                    <th>Created Date</th>
                    <th width="15%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NameEn</td>
                        <td>@item.NameAr</td>
                        @if (item.IsActive)
                        {
                            <td><input type="checkbox" checked></td>
                        }
                        else
                        {
                            <td><input type="checkbox"></td>
                        }
                        @if (item.IsPartner)
                        {
                            <td><input type="checkbox" checked></td>
                        }
                        else
                        {
                            <td><input type="checkbox"></td>
                        }
                        <td>@item.CreatedDate</td>
                        <td>
                            <a href="#" class='btn PopUp btn-xs btn-success'><i class='glyphicon glyphicon-link'></i></a>
                            <a class='btn btn-xs btn-info PopUp' onclick="showInPopup('@Url.Action("Edit" , "Brand" ,new{id = item.Id} ,Context.Request.Scheme)' , 'Edit Brand');"><i class='glyphicon glyphicon-edit'></i></a>
                            <a class="btn btn-xs btn-danger PopUp" onclick="showInPopup('@Url.Action("Delete" , "Brand" ,new{id = item.Id} ,Context.Request.Scheme)' , 'Delete Brand');"><i class='glyphicon glyphicon-trash'></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>