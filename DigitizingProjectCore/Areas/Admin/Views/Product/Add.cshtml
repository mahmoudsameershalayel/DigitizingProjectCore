@model DigitizingProjectCore.Areas.Admin.Dto.AddProductWithCategoryAndBrand
@{
}
<form asp-controller="Product" asp-action="Add" method="POST">
    <div class="form-group">
        <label for="nameAr">Name (Arabic)</label>
        <input type="text" class="form-control" id="nameAr" asp-for="NameAr">
    </div>
    <div class="form-group">
        <label for="nameEn">Name (English)</label>
        <input type="text" class="form-control" id="nameEn" asp-for="NameEn">
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select class="form-select" id="category" asp-for="CategoryId" asp-items="Model._Categories"></select>
    </div>
    <div class="form-group">
        <label for="brand">Brand</label>
        <select class="form-select" id="brand" asp-for="BrandId" asp-items="Model._Brands"></select>
    </div>
    <div class="form-group">
        <label for="summaryAr">Summary (Arabic)</label>
        <input type="text" class="form-control" id="summaryAr" asp-for="NameAr">
    </div>
    <div class="form-group">
        <label for="summaryEn">Summary (English)</label>
        <input type="text" class="form-control" id="summaryEn" asp-for="NameAr">
    </div>
    <div class="form-group">
        <label for="detailsAr">Details (Arabic)</label>
        <input type="text" class="form-control" id="detailsAr" asp-for="DetailsAr">
    </div>
    <div class="form-group">
        <label for="detailsEn">Details (English)</label>
        <input type="text" class="form-control" id="detailsEn" asp-for="DetailsEn">
    </div>
    <div class="form-group">
        <label for="logo">Logo</label>
        <input type="text" class="form-control" id="logo" asp-for="LogoImage">
    </div>
    <div class="form-group">
        <label for="pdfFile">PDF File</label>
        <input type="text" class="form-control" id="pdfFile" asp-for="PDFFile">
    </div>
    <div class="form-group">
        <label for="docFile">Doc File</label>
        <input type="text" class="form-control" id="docFile" asp-for="DocFile">
    </div>
    <div class="form-group">
        <label for="active">Active</label>
        <input type="checkbox" id="active" checked asp-for="IsActive">
    </div>
    <input type="submit" class="btn btn-primary" value="Create" />
</form>