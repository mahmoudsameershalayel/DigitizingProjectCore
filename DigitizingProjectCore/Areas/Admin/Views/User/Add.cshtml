@model DigitizingProjectCore.Areas.Admin.Dto.CreateUpdateUserDto
@{
    Layout = null;
}

<form asp-controller="User" asp-action="Add" method="POST" onsubmit="return jQueryAjaxPost(this);">
    <div class="row">
        <div class="col-md-6 form-group">
            <label for="fullName">Full Name</label>
            <input type="text" class="form-control" id="fullName" asp-for="FullName">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label for="email">Email Address</label>
            <input type="text" class="form-control" id="email" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 form-group">
            <label for="password">Password</label>
            <input type="text" class="form-control" id="password" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label for="phone">Mobile</label>
            <input type="text" class="form-control" id="phone" asp-for="Phone">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label for="active">Active</label>
        <input type="checkbox" id="active" checked asp-for="IsActive">
    </div>
    <input type="submit" class="btn btn-primary" value="Create" />
</form>