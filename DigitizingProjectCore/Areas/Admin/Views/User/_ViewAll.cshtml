@model List<UserViewModel>
<div class="table-responsive">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Manage Users</h2><h5>(Total Users : @Model.Count)</h5>
                </div>
                <div class="col-sm-6 text-right">
                    <a class="btn btn-success" onclick="showInPopup('@Url.Action("Add" , "User" ,null ,Context.Request.Scheme)' , 'Add New User');">Add New User</a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email Address</th>
                    <th>Mobile</th>
                    <th>Active</th>
                    <th>Created Date</th>
                    <th width="15%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        @if (item.IsActive)
                        {
                            <td><input type="checkbox" checked></td>
                        }
                        else
                        {
                            <td><input type="checkbox"></td>
                        }
                        <td>@item.Created_At</td>
                        <td>
                            <div class='btn-group'>
                                <button type='button' class='btn-xs btn btn-success dropdown-toggle' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
                                    <i class='fa fa-cog'></i> Options <span class='caret'></span>
                                </button>
                                <ul class='dropdown-menu'>
                                    <li><a class='PopUp' onclick="showInPopup('@Url.Action("UserPremissions" , "User" ,new{id = item.Id} ,Context.Request.Scheme)' , 'User Premissions');"><i class='glyphicon glyphicon-lock'></i> User Permission</a> </li>
                                    <li><a class='PopUp' onclick="showInPopup('@Url.Action("ResetPassword" , "User" ,new{id = item.Id} ,Context.Request.Scheme)' , 'Reset Password');"><i class='fa fa-key'></i> Reset Password</a>  </li>
                                    <li><a class='PopUp' onclick="showInPopup('@Url.Action("Edit" , "User" ,new{id = item.Id} ,Context.Request.Scheme)' , 'Edit User');"><i class='glyphicon glyphicon-edit'></i> Edit User</a> </li>
                                    <li><a class='PopUp' onclick="showInPopup('@Url.Action("Delete" , "User" ,new{id = item.Id} ,Context.Request.Scheme)' , 'Edit User');"><i class='glyphicon glyphicon-trash'></i> Delete</a> </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
