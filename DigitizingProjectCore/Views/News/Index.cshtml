@model List<DigitizingProjectCore.Models.News>
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture;
    var lang = currentCulture.Name;
}
<!-- Start Page Title Area -->
<div class="page-title-area page-title-style-two">
    <div class="container">
        <div class="page-title-content">
            <h2>News</h2>
            <ul>
                <li>
                    <a href="/@lang/">
                        <i class="bx bx-home"></i>
                        @(lang == "ar" ? "الصفحة الرئيسية" : "Home")
                    </a>
                </li>
                <li>
                    <a href="/@lang/Home/About">
                        @(lang == "ar" ? "من نحن" : "AboutUs")
                    </a>
                </li>
                <li class="active">
                    @(lang == "ar" ? "الأخبار" : "News")
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Title Area -->
<!-- Start Blog Column Two Area -->
<section class="blog-column-two-area ptb-100">
    <div class="container">
        <div class="row">
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-blog-posts">
                            <a class="imgContainer" href="/News/Details?id=@item.Id">
                                <img src="/Images/@item.LogoImageName" alt="@(lang=="ar"?item.TitleAr:item.TitleEn)">
                            </a>

                            <div class="single-blog-content">
                                <span>@(lang == "ar" ? item.Category.NameAr : item.Category.NameEn)</span>

                                <h3>
                                    <a href="/News/Details?id=@item.Id">
                                        @(lang == "ar" ? item.TitleAr : item.TitleEn)
                                    </a>
                                </h3>

                                @*<p>@(lang=="ar"?item.SummaryAr:item.SummaryEn)</p>*@

                                <ul class="admin">
                                    <!--li>
                                        <a href="#">
                                            <i class="bx bx-user-circle"></i>
                                            Carl Bradshaw
                                        </a>
                                    </li-->
                                    <li class="float">
                                        <i class="bx bx-calendar-alt"></i>
                                        @item.Date.ToString()
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-lg-12">
                    @*@Html.Partial("_pagination")*@
                </div>
            }
            else
            {
                <div class="col-sm-12">
                    <div class="alert alert-info">
                        @(lang == "ar" ? "لا يوجد عناصر لعرضها" : "ThereIsNoItemsToShow")
                    </div>
                </div>
            }

        </div>
    </div>
</section>