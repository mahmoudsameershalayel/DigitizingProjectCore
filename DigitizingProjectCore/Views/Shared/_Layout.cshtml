@using DigitizingProjectCore.Services.LocalizationService;
@using DigitizingProjectCore.Resources;
@using Microsoft.AspNetCore.Localization
@using System.Globalization;
@{
    var db = ViewBag.db as DigitizingProjectCore.Data.ApplicationDbContext;
    var controller = ViewContext.RouteData.Values["controller"].ToString().ToLower();
    var action = ViewContext.RouteData.Values["action"].ToString().ToLower();
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture;
    var lang = currentCulture.Name;
    var ltrValue = lang == "en" ? "ltr" : "rtl";
    var productsCategory = db.CategoryForProducts.Where(x => x.IsDelete == false && x.IsActive == true && x._Products.Count(x => x.IsActive == true) > 0).OrderBy(x => x.SortId).ToList();
    var servicesCategory = db.CategoryForServices.Where(x => x.IsDelete == false && x.IsActive == true && x._Services.Count(x => x.IsActive == true) > 0).OrderBy(x => x.SortId).ToList();
    var dcount = db.Distributors.Count(x => x.IsDelete == false && x.IsActive == true);
    var pages = db.Pages.Where(x => x.IsDelete == false && x.IsActive == true).ToList();
    var setting = db.Configurations.FirstOrDefault();
    var supportedCultures = new[]
    {
        new CultureInfo("en"),
        new CultureInfo("ar"),
    };
}
@inject LocalizationService _localization

