@model DigitizingProjectCore.Areas.Admin.ViewModel.JobViewModel
@using DigitizingProjectCore.Services.LocalizationService;
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture;
    var lang = currentCulture.Name;
}
@inject LocalizationService _localization
<!-- Start Page Title Area -->
<div class="page-title-area page-title-style-two">
    <div class="container">
        <div class="page-title-content">
            <h2>@(lang == "ar" ? Model.JobTitleAr : Model.JobTitleEn)</h2>
            <ul>
                <li>
                    <a href="/">
                        <i class="bx bx-home"></i>
                        @_localization.Getkey("Home")
                    </a>
                </li>
                <li>
                    <a href="/Job/Index">
                        Jobs
                    </a>
                </li>
                <li class="active">@(lang == "ar" ? Model.JobTitleAr : Model.JobTitleEn)</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Title Area -->
<!-- Start Terms & Conditions Area -->
<section class="terms-conditions-area ptb-100">
    <div class="container">
        <div class="terms-conditions">
            <p>

                StartDate: <b>@Model.FromDate.ToString("dd/MM/yyyy")</b>, @_localization.Getkey("EndDate"): <b>@Model.ToDate.ToString("dd/MM/yyyy")</b>

            </p>
            @Html.Raw(lang == "ar" ? Model.DetailsAr : Model.DetailsEn)
            <p>

                <a class="btn btn-lg btn-primary" href="/JobApplication/Add/@Model.Id">
                    @_localization.Getkey("Apply")
                </a>
            </p>
        </div>
    </div>
</section>
<!-- End Terms & Conditions Area -->