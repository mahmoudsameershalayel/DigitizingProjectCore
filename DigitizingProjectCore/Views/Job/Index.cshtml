@using DigitizingProjectCore.Services.LocalizationService;
@model List<DigitizingProjectCore.Areas.Admin.ViewModel.JobViewModel>
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture;
    var lang = currentCulture.Name;
}
@inject LocalizationService _localization
<!-- Start Page Title Area -->
<div class="page-title-area page-title-style-two">
    <div class="container">
        <div class="page-title-content">
            <h2>
                @_localization.Getkey("Jobs")
            </h2>
            <ul>
                <li>
                    <a href="/">
                        <i class="bx bx-home"></i>
                        @_localization.Getkey("Home")
                    </a>
                </li>
                <li class="active">
                    @_localization.Getkey("Jobs")
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Title Area -->
<!-- Start Blog Column Two Area -->
<section class="blog-column-two-area ptb-100">
    <div class="container">
        <div class="row">
            @if (Model.Count() > 0)
            {
                <div class="col-sm-12">
                    <table class="table table-hover table-striped">
                        <thead>                           
                            <tr>
                                <th>
                                    @_localization.Getkey("JobTitle")
                                </th>
                                <th width="10%">
                                    @_localization.Getkey("StartDate")
                                </th>
                                <th width="10%">
                                    @_localization.Getkey("EndDate")
                                </th>
                                <th width="15%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a href="/Job/Details/@item.Id">@(lang == "ar" ? item.JobTitleAr : item.JobTitleEn)</a></td>
                                    <td><a href="/Job/Details/@item.Id">@item.FromDate.ToString("dd/MM/yyyy")</a></td>
                                    <td><a href="/Job/Details/@item.Id">@item.ToDate.ToString("dd/MM/yyyy")</a></td>
                                    <td>
                                        <a class="btn btn-primary" href="/JobApplication/Add/@item.Id">
                                            @_localization.Getkey("Apply")
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="col-sm-12">
                    <div class="alert alert-info">
                        @_localization.Getkey("ThereIsNoItemsToShow")
                    </div>
                </div>
            }

        </div>
    </div>
</section>