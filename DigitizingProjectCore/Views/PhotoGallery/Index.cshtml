@model List<DigitizingProjectCore.Models.PhotoGallery>
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture;
    var lang = currentCulture.Name;
}
<div class="page-title-area page-title-style-two">
    <div class="container">
        <div class="page-title-content">
            <h2>PhotoGallery</h2>
            <ul>
                <li>
                    <a href="/@lang/">
                        <i class="bx bx-home"></i>
                        @(lang == "ar" ? "الصفحة الرئيسية" : "Home")
                    </a>
                </li>
                <li>
                    <a href="/@lang/Home/About">
                        @(lang == "ar" ? "من نحن" : "AboutUs")
                    </a>
                </li>
                <li class="active">@(lang == "ar" ? "معرض الصور" : "Photo Gallery")</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Title Area -->
<!-- Start Blog Column Two Area -->
<section class="blog-column-two-area ptb-100">
    <div class="container">
        <div class="row">

            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-blog-posts">
                            <a class="imgContainer" href="/PhotoGallery/Details?id=@item.Id">
                                <img src="/Images/@item.MainImageName" alt="@(lang=="ar"?item.NameAr:item.NameEn)">
                            </a>

                            <div class="single-blog-content">
                                <h3>
                                    <a href ="/PhotoGallery/Details?id=@item.Id">
                                        @(lang == "ar" ? item.NameAr : item.NameEn)
                                    </a>
                                </h3>

                                <p> @(lang == "ar" ? item.SummaryAr : item.SummaryEn)</p>

                                <ul class="admin">
                                    <li class="float">
                                        <i class="bx bx-calendar-alt"></i>
                                        @item.Created_At.ToString()
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                }
                <div class="col-lg-12">
                   @* @await Html.PartialAsync("_pagination")*@
                </div>
            }
            else
            {
                <div class="col-sm-12">

                    <div class="alert alert-info">ThereIsNoItemsToShow</div>
                </div>
            }





        </div>
    </div>
</section>